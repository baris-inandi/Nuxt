{
  "extends": [
    "@nuxtjs/eslint-config-typescript",
    "prettier"
  ],
  "rules": {
    "vue/no-multiple-template-root": 0,
    "no-console": "off"
  },
  "overrides": [
    {
      "files": [
        "pages/**/*.vue",
        "layouts/*.vue"
      ],
      "rules": {
        "vue/multi-word-component-names": "off",
        "vue/component-tags-order": [
          "error",
          {
            "order": [
              "script",
              "template",
              "style"
            ]
          }
        ]
      }
    }
  ]
}
